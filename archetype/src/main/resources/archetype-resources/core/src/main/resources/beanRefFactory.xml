<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
  default-lazy-init="true">

  <bean
    id="${parentArtifactId}-model-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/tools/mock.xml</value>
        <value>${packageInPathFormat}/model/dsl-model.xml</value>
        <value>${packageInPathFormat}/model/model.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="${parentArtifactId}-viewtester-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/tools/mock.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/swing/commons-swing.xml</value>
        <value>${packageInPathFormat}/model/dsl-model.xml</value>
        <value>${packageInPathFormat}/model/model.xml</value>
        <value>${packageInPathFormat}/view/dsl-view.xml</value>
        <value>${packageInPathFormat}/view/view.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="${parentArtifactId}-backend-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/${persistence_hibernate_or_mongo}/commons-${persistence_hibernate_or_mongo}.xml</value>
        <value>${packageInPathFormat}/model/dsl-model.xml</value>
        <value>${packageInPathFormat}/model/model.xml</value>
        <value>${packageInPathFormat}/backend/dsl-backend.xml</value>
        <value>${packageInPathFormat}/backend/backend.xml</value>
        <value>${packageInPathFormat}/core-config.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="${parentArtifactId}-swing-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/${persistence_hibernate_or_mongo}/commons-${persistence_hibernate_or_mongo}.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/swing/commons-swing.xml</value>
        <value>${packageInPathFormat}/model/dsl-model.xml</value>
        <value>${packageInPathFormat}/model/model.xml</value>
        <value>${packageInPathFormat}/backend/dsl-backend.xml</value>
        <value>${packageInPathFormat}/backend/backend.xml</value>
        <value>${packageInPathFormat}/view/dsl-view.xml</value>
        <value>${packageInPathFormat}/view/view.xml</value>
        <value>${packageInPathFormat}/frontend/dsl-frontend.xml</value>
        <value>${packageInPathFormat}/frontend/frontend.xml</value>
        <value>${packageInPathFormat}/core-config.xml</value>
        <value>${packageInPathFormat}/config.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
    id="${parentArtifactId}-remote-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext"
    lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/${persistence_hibernate_or_mongo}/commons-${persistence_hibernate_or_mongo}.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/remote/commons-remote.xml</value>
        <value>${packageInPathFormat}/model/dsl-model.xml</value>
        <value>${packageInPathFormat}/model/model.xml</value>
        <value>${packageInPathFormat}/backend/dsl-backend.xml</value>
        <value>${packageInPathFormat}/backend/backend.xml</value>
        <value>${packageInPathFormat}/view/dsl-view.xml</value>
        <value>${packageInPathFormat}/view/view.xml</value>
        <value>${packageInPathFormat}/frontend/dsl-frontend.xml</value>
        <value>${packageInPathFormat}/frontend/frontend.xml</value>
        <value>${packageInPathFormat}/core-config.xml</value>
        <value>${packageInPathFormat}/config.xml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean
      id="${parentArtifactId}-remote-mobile-context"
      class="org.springframework.context.support.ClassPathXmlApplicationContext"
      lazy-init="true">
    <constructor-arg>
      <list>
        <value>org/jspresso/framework/application/commons.xml</value>
        <value>org/jspresso/framework/application/backend/persistence/${persistence_hibernate_or_mongo}/commons-${persistence_hibernate_or_mongo}.xml</value>
        <value>org/jspresso/framework/application/frontend/commons-frontend.xml</value>
        <value>org/jspresso/framework/application/frontend/remote/commons-remote.xml</value>
        <value>org/jspresso/framework/application/frontend/remote/commons-remote-mobile.xml</value>
        <value>${packageInPathFormat}/model/dsl-model.xml</value>
        <value>${packageInPathFormat}/model/model.xml</value>
        <value>${packageInPathFormat}/backend/dsl-backend.xml</value>
        <value>${packageInPathFormat}/backend/backend.xml</value>
        <value>${packageInPathFormat}/spec/mobile-dsl-backend.xml</value>
        <value>${packageInPathFormat}/backend/mobile-backend.xml</value>
        <value>${packageInPathFormat}/view/dsl-view.xml</value>
        <value>${packageInPathFormat}/view/view.xml</value>
        <value>${packageInPathFormat}/spec/mobile-dsl-view.xml</value>
        <value>${packageInPathFormat}/view/mobile-view.xml</value>
        <value>${packageInPathFormat}/frontend/dsl-frontend.xml</value>
        <value>${packageInPathFormat}/frontend/frontend.xml</value>
        <value>${packageInPathFormat}/spec/mobile-dsl-frontend.xml</value>
        <value>${packageInPathFormat}/frontend/mobile-frontend.xml</value>
        <value>${packageInPathFormat}/core-config.xml</value>
        <value>${packageInPathFormat}/config.xml</value>
      </list>
    </constructor-arg>
  </bean>

</beans>
